{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "watch": [
    "bin/",
    "lib/"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json",
  "events": {
    "start": "npm run lint",
    "restart": "npm run lint",
    "exit": "mongodb-runner stop"
  }
}
